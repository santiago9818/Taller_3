# Taller_3

#include <stdio.h>
#include <stdlib.h>

int main()
{
    int x;
     printf("Digite el tama√±o del vector: ");scanf("%i",&x);

       
        int a[x][x];
        int i = 0, j = 0, k = 0;
        for (i = 0; i < x; i++) {
            for (j = 0; j < x; j++) {
                printf("Digite numero en la posicion [",i,"][",j,"]:");
                scanf("%i",&a[i][j]);
                
            }
        }
        for (i = 0; i < x; i++) {
            for (j = 0; j <x; j++) {
                printf("%i",a[i][j]);
            }
            
        }
        printf("\n");
       printf("Los pares son: ");
        for (i = 0; i < x; i++) {
            for (j = 0; j < x; j++) {
                if (a[i][j] % 2 == 0) {
                    printf("%i\n",a[i][j]);

                }
            }    
        }
        printf("Los impares son: ");
         for (i = 0; i <x; i++) {
            for (j = 0; j <x; j++) {
        
        
            
                if (a[i][j]%2!=0){
                    printf( "%i\n", a[i][j]);
                }
                    
            }
               
        }
         printf("Los numeros positivos son: ");
          for (i = 0; i < x; i++) {
            for (j = 0; j < x; j++) {
        
        
            
                if (a[i][j]>0){
                    printf( "%i\n", a[i][j]);
                }
                    
            }
               
        }
          printf("Los numeros negativos son: ");
          for (i = 0; i < x; i++) {
            for (j = 0; j < x; j++) {
        
        
            
                if (a[i][j]<0){
                    
                    printf("%i\n", a[i][j]);
                }
                    
            }
               
        }
  
 system("PAUSE");
  return 0;
}
